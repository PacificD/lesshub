{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "tsconfig.json"],
  "experimentalUI": true,
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lesshub#dev": {
      "persistent": true,
      "env": [
        "EDGE_STORE_ACCESS_KEY",
        "EDGE_STORE_SECRET_KEY",
        "NEXT_PUBLIC_*",
        "!NEXT_PUBLIC_GIT_*"
      ],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env.staging",
        ".env"
      ],
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:push": {
      "inputs": ["prisma/schema.prisma", "db/schema.ts"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**", ".next/**", "!.next/.cache/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "type-check": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
